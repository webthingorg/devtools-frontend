import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_pre_built.gni")
import("../visibility.gni")

devtools_pre_built("csp_evaluator") {
  sources_are_release = false

  sources = [
    "csp_evaluator-tsconfig.json",
    "package/dist/evaluator.d.ts",
    "package/dist/evaluator.js",
    "package/dist/parser.d.ts",
    "package/dist/parser.js",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "csp_evaluator.ts"

  deps = [ ":csp_evaluator" ]

  visibility = [
    "../../panels/application/components/*",
  ]

  visibility += devtools_third_party_visibility
}
