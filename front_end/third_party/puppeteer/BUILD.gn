import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_pre_built.gni")
import("../visibility.gni")

EXCLUDED_SOURCES = []

SOURCES = [
  "package/lib/esm/puppeteer/common/CSSQueryHandler.js",
  "package/lib/esm/puppeteer/common/PSelectorParser.js",
  "package/lib/esm/puppeteer/injected/CSSSelector.js",
  "package/lib/esm/third_party/parsel-js/parsel-js.js",
  "puppeteer-tsconfig.json",
]

devtools_pre_built("puppeteer") {
  sources_are_release = false

  sources = filter_exclude(SOURCES, EXCLUDED_SOURCES)
}

devtools_entrypoint("bundle") {
  entrypoint = "puppeteer.ts"

  deps = [ ":puppeteer" ]

  visibility = [
    "../../../front_end/*",
    "../../../test/e2e/puppeteer/*",
  ]

  visibility += devtools_third_party_visibility
}
