devtools_entrypoint("bundle") {
  entrypoint = "coverage.ts"

  deps = [ ":coverage" ]
}

devtools_entrypoint("legacy") {
  entrypoint = "coverage-legacy.ts"

  deps = [ ":bundle" ]
}

devtools_entrypoint("meta") {
  entrypoint = "coverage-meta.ts"

  deps = [ ":bundle" ]

  visibility = [ "../../entrypoints/*" ]
}
