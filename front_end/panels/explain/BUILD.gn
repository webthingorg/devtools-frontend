import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")
import("../../../scripts/build/ninja/generate_css.gni")
import("../visibility.gni")

devtools_module("explain") {
  sources = [
    "ExplainPopover.ts",
    "ActionDelegate.ts",
    "Bindings.ts"
  ]

  deps = [
    "../sources:bundle",
    "../../core/host:bundle",
    "../../ui/legacy/components/source_frame:bundle",
    "../../ui/components/markdown_view:bundle",
    "../../third_party/marked:bundle",
    "../../ui/legacy:bundle"
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "explain.ts"

  deps = [
    ":explain",
  ]

  visibility = [
    ":*",
    "../../../test/unittests/*",
    "../../../test/unittests/front_end/panels/emulation/*",
    "../../entrypoints/*",
    "../../legacy_test_runner/*",
  ]

  visibility += devtools_panels_visibility
}

devtools_entrypoint("meta") {
  entrypoint = "explain-meta.ts"

  deps = [
    ":bundle",
    "../../core/i18n:bundle",
    "../../ui/legacy:bundle",
    "../sources:bundle",
  ]

  visibility = [ "../../entrypoints/*" ]
}
