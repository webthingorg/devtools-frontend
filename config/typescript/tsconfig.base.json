{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "checkJs": true,
    "allowJs": true,

    "noEmitOnError": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,

    "composite": true,
    "declaration": true,

    "sourceMap": true,
    "inlineSources": true
  }
}
